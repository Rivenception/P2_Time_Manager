<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="author-container">
      <h1>Time Summary</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Category</th>
            <th>Task</th>
            <th>Time Spent</th>
            <th>Program</th>
            <th>Notes</th>
            <th>Delete Entry</th>
          </tr>
        </thead>
        <tbody>
          <tr id="form-row">
            <td colspan="10">
              <label for="auth">Date:</label>
              <input placeholder="  Enter the date" id="date" type="text" />
              <br>
              <label for="auth">Category:</label>
              <select placeholder="Enter the Category" class="custom-select" id="inputGroupCategory">
              </select>
              <br>
              <label for="auth">Task:</label>
              <select placeholder="Enter a task" class="custom-select" id="inputGroupTask">
              </select>
              <br>
              <label for="auth">Time:</label>
              <select placeholder="Enter time" class="custom-select" id="inputGroupTime">
              </select>
              <br>
              <label for="auth">Program:</label>
              <input placeholder="  Enter an RFB#" id="inputGroupProgram" type="number" />
              <br>
              <label for="auth">Notes:</label>
              <input placeholder="   Enter Notes" id="inputGroupNotes" type="text" style="width: -webkit-fill-available; height: 100px;"/>
              <br>
              <button type="submit" class="btn btn-success">Add Entry</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>