<div class="jumbotron jumbotron-fluid">
  <class class="container">
    <h1 class="header">Time Summary</h1>
    <h2 class="subheader">Engineering</h2>
    <h2 class="subheader">{{this.employeeName}}</h2>
    <h2 class="subheader" id="hiddenId">{{this.userName}}</h2>
</div>
<div class="table-container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Log#</th>
        <th>Name</th>
        <th>Date</th>
        <th>Category</th>
        <th>Task</th>
        <th>Time Spent</th>
        <th>Program</th>
        <th>ECR</th>
        <th>Notes</th>
        <th>Delete Entry</th>
      </tr>
    </thead>
    <tbody>
      <tr id="form-row">
        <td colspan="10">
          <label for="name">Name:</label>
          <select placeholder="Select Employee" class="custom-select" id="inputGroupEmployee">
          </select>
          <br>
          <label for="auth">Date:</label>
          <input placeholder="Enter the date" id="date" type="date" />
          <br>
          <label for="category">Category:</label>
          <select placeholder="Enter the Category" class="custom-select" id="inputGroupCategory">
          </select>
          <br>
          <label for="task">Task:</label>
          <select placeholder="Enter a task" class="custom-select" id="inputGroupTask">
          </select>
          <br>
          <label for="time">Time:</label>
          <select placeholder="Enter time" class="custom-select" id="inputGroupTime">
          </select>
          <br>
          <br>
          <label for="program">Program:</label>
          <input placeholder="  Enter an RFB#" id="inputGroupProgram" type="number" />
          <br>
          <label for="program">ECR:</label>
          <input placeholder="  Enter an ECR#" id="inputGroupECR" type="number" />
          <br>
          <label for="notes">Notes:</label>
          <input placeholder="Enter Notes" id="inputGroupNotes" type="text"
            style="width: -webkit-fill-available; height: 100px;" />

          <br>
          <button type="submit" class="btn btn-success" id="timeSubmit">Add Entry</button>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<footer class="footer mt-auto py-3">
  <div class="container">
    <span class="text-muted">
      View As <a href="./admin"> Admin </a> // <a href="./eng"> Engineer </a> // <a href="./pm">Project Manager</a> //
      <a href="./mfg"> Manufacturing </a>
    </span>
  </div>
</footer>
